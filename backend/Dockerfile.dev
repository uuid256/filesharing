# Development Dockerfile for Backend
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install curl for healthcheck and dependencies
RUN apk add --no-cache curl && npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start development server with hot reload
CMD ["npm", "run", "start:dev"]
